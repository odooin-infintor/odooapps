<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="spa_booking_rule_user" model="ir.rule">
        <field name="name">Spa Booking User</field>
        <field name="model_id" ref="model_spa_booking" />
        <field name="domain_force">[('branch_id', '=', user.branch_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="spa_booking_rule_manager" model="ir.rule">
        <field name="name">Spa Booking Manager</field>
        <field name="model_id" ref="model_spa_booking" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]" />
    </record>

    <record id="spa_branch_rule_user" model="ir.rule">
        <field name="name">Spa Branch User</field>
        <field name="model_id" ref="model_spa_branch" />
        <field name="domain_force">[('user_ids.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="spa_branch_rule_manager" model="ir.rule">
        <field name="name">Spa Branch Manager</field>
        <field name="model_id" ref="model_spa_branch" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]" />
    </record>

    <record id="spa_beauticians_rule_user" model="ir.rule">
        <field name="name">Spa Beauticians User</field>
        <field name="model_id" ref="base.model_res_users" />
        <field name="domain_force">[('branch_id', '=', user.branch_id.id), ('is_spa_user', '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="spa_beauticians_rule_manager" model="ir.rule">
        <field name="name">Spa Beauticians Manager</field>
        <field name="model_id" ref="base.model_res_users" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]" />
    </record>

</odoo>
