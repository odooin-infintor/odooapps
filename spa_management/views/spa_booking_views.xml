<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="spa_booking_view_tree" model="ir.ui.view">
        <field name="name">spa.booking.tree</field>
        <field name="model">spa.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="partner_id" />
                <field name="partner_phone" />
                <field name="date" />
                <field name="time_from" invisible="1" />
                <field name="time_to" invisible="1" />
                <field name="branch_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="spa_booking_view_form" model="ir.ui.view">
        <field name="name">spa.booking.form</field>
        <field name="model">spa.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_check_in" type="object" class="oe_highlight" string="Check In"
                        invisible="context.get('show_footer', False)"
                        attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    <button name="action_confirm" type="object" string="Check Out"
                        invisible="context.get('show_footer', False)"
                        attrs="{'invisible': [('state', '!=', 'check_in')]}" class="oe_highlight" />
                    <button name="action_pay" type="object" string="Register Payment"
                        invisible="context.get('show_footer', False)"
                        attrs="{'invisible': [('state', '!=', 'confirm')]}" class="oe_highlight" />
                    <button name="action_draft" type="object" class="oe_highlight" string="Move to Draft"
                        attrs="{'invisible': [('state', '!=', 'cancel')]}" />
                    <button name="action_spa_invoice_print" type="object" class="oe_highlight" string="Print Receipt"
                        invisible="context.get('show_footer', False)"
                        attrs="{'invisible': ['|', ('invoice_id', '=', False), ('state', '=', 'cancel')]}" />
                    <button name="action_cancel" type="object" string="Cancel"
                        attrs="{'invisible': [('state', 'in', ['cancel', 'done'])]}" />
                    <button name="action_no_show" type="object" string="No-Show"
                        attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,check_in,confirm,done" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <div attrs="{'invisible': [('invoice_id', '=', False)]}" class="o_field_widget text-center o_stat_info" style="padding:6px;border-left: 1px solid #875A7B;">
                                <div>
                                    <i class="fa fa-pencil-square-o" />
                                </div>
                                <field name="order_id" readonly="1" /><br/>
                                <span class="o_stat_text">Sale Order</span>
                            </div>
                            <div attrs="{'invisible': [('invoice_id', '=', False)]}" class="o_field_widget text-center o_stat_info" style="padding:6px;border-left: 1px solid #875A7B;">
                                <div>
                                    <i class="fa fa-file-text-o" />
                                </div>
                                <field name="invoice_id" readonly="1" /><br/>
                                <span class="o_stat_text">Invoice</span>
                                <field name="payment_ids" invisible="1" />
                            </div>

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                            <field name="invoice_id" invisible="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" required="1" domain="[('customer_rank', '>', 0)]"
                                context="{'default_customer_rank': 1}"
                                attrs="{'readonly': [('state', 'not in', ['draft', 'check_in'])]}"
                                options="{'no_quick_create': True}" />
                            <field name="partner_phone" readonly="1" force_save="True" />
                            <field name="partner_email" readonly="1" force_save="True" />
                            <field name="overlap_timing" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="source" attrs="{'readonly': [('state', 'not in', ['draft', 'check_in'])]}" />
                            <field name="branch_id" required="1" options="{'no_create': True, 'no_create_edit':True}"
                                attrs="{'readonly': [('state', 'not in', ['draft', 'check_in'])]}" />
                            <field name="date" required="1"
                                attrs="{'readonly': [('state', 'not in', ['draft', 'check_in'])]}" />
                            <field name="time_from" invisible="1" />
                            <field name="time_to" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="services">
                            <field name="booking_line_ids"
                                context="{'default_from_time': time_to, 'default_product_id': context.get('default_product_id', False), 'default_employee_id': context.get('default_employee_id', False)}"
                                attrs="{'readonly': [('state', 'not in', ['draft', 'check_in'])]}">
                                <tree editable="bottom">
                                    <field name="product_id" required="1"
                                        domain="[('sale_ok', '=', True), ('type', '=', 'service')]"
                                        options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="product_type" invisible="1" />
                                    <field name="employee_id" attrs="{'required': [('product_type', '=', 'service')]}"
                                        options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="from_time"
                                        attrs="{'required': [('product_type', '=', 'service')], 'invisible': [('product_type', '!=', 'service'), ('product_type', '!=', False)]}" />
                                    <field name="to_time" readonly="1"
                                        attrs="{'invisible': [('product_type', '!=', 'service')]}" />
                                    <field name="unit_price" readonly="1" widget="monetary" />
                                    <field name="description" />
                                    <field name="currency_id" invisible="1" />
                                    <field name="from_date" invisible="1" />
                                    <field name="to_date" invisible="1" />
                                </tree>
                            </field>
                            <group col="6">
                                <group colspan="4"></group>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total" />
                                    </div>
                                    <field name="amount_total" nolabel="1" widget="monetary"
                                        class="oe_subtotal_footer_separator"
                                        options="{'currency_field': 'currency_id'}" />
                                    <field name="currency_id" invisible="1" />
                                </group>
                                <div class="oe_clear" />
                            </group>
                        </page>
                        <page string="Note">
                            <field name="note" nolabel="1" placeholder="Type your notes here..." />
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="check_in_time" attrs="{'readonly': [('state', '!=', 'check_in')]}" />
                                    <field name="check_out_time" attrs="{'readonly': [('state', '!=', 'confirm')]}" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                <footer invisible="not context.get('show_footer', False)">
                    <button name="action_save" type="object" string="Save Appointment" class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ['draft', 'check_in'])]}" />
                    <button name="action_check_in" type="object" class="oe_highlight" string="Check In"
                        attrs="{'invisible': [('state', 'not in', ['draft', 'no_show'])]}" />
                    <button name="action_confirm" type="object" string="Check Out" class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'check_in')]}" />
                    <button name="action_pay" type="object" string="Register Payment"
                        attrs="{'invisible': [('state', '!=', 'confirm')]}" class="oe_highlight" />
                    <button name="action_spa_invoice_print" type="object" class="oe_highlight" string="Print Receipt"
                        attrs="{'invisible': ['|', ('invoice_id', '=', False), ('state', '=', 'cancel')]}" />
                    <button string="Close" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="spa_booking_view_search" model="ir.ui.view">
        <field name="name">spa.booking.search</field>
        <field name="model">spa.booking</field>
        <field name="arch" type="xml">
            <search string="Search Sales Order">
                <field name="partner_id" string="Customer" filter_domain="[('partner_id.name','ilike',self)]" />
                <field name="name" string="Booking Ref" filter_domain="[('name','ilike',self)]" />
                <field name="partner_phone" string="Phone" filter_domain="[('partner_phone','ilike',self)]" />
                <field name="partner_email" string="Email" filter_domain="[('partner_email','ilike',self)]" />
                <field name="invoice_id" operator="child_of" />
            </search>
        </field>
    </record>

    <record id="spa_booking_action" model="ir.actions.act_window">
        <field name="name">Booking</field>
        <field name="res_model">spa.booking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="spa_booking_view_search" />
        <field name="context">{'calendar_booking': False}</field>
    </record>

    <record id="spa_booking_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="spa_booking_view_tree" />
        <field name="act_window_id" ref="spa_booking_action" />
    </record>

    <record id="spa_booking_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="spa_booking_view_form" />
        <field name="act_window_id" ref="spa_booking_action" />
    </record>

    <menuitem id="spa_booking_menu" name="Booking" parent="in_spa_menu_root" action="spa_booking_action"
        sequence="20" />


    <!-- Calendar Booking -->
    <record id="spa_booking_action_calendar" model="ir.actions.client">
        <field name="name">Booking Calendar</field>
        <field name="tag">calendar_booking</field>
        <field name="context">{'calendar_booking': True}</field>
    </record>

    <menuitem id="spa_booking_menu_calendar" name="Calendar" parent="in_spa_menu_root"
        action="spa_booking_action_calendar" sequence="10" />
        
</odoo>
