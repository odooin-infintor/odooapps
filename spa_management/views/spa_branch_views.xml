<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="spa_branch_view_tree" model="ir.ui.view">
        <field name="name">spa.branch.tree</field>
        <field name="model">spa.branch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="spa_branch_view_form" model="ir.ui.view">
        <field name="name">spa.branch.form</field>
        <field name="model">spa.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Branch Name" class="oe_edit_only" />
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" required="1" />
                            <field name="warehouse_id" string="Default Warehouse" required="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Resources">
                            <field name="resource_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="resource_id" required="1" />
                                    <field name="occupancy" required="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="spa_branch_action" model="ir.actions.act_window">
        <field name="name">Branch</field>
        <field name="res_model">spa.branch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="spa_branch_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="spa_branch_view_tree" />
        <field name="act_window_id" ref="spa_branch_action" />
    </record>
    <record id="spa_branch_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="spa_branch_view_form" />
        <field name="act_window_id" ref="spa_branch_action" />
    </record>


    <menuitem id="spa_branch_menu" name="Branch" parent="spa_config_menu" action="spa_branch_action" sequence="10" />

</odoo>
