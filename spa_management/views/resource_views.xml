<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="spa_resource_view_tree" model="ir.ui.view">
        <field name="name">spa.resource.tree</field>
        <field name="model">spa.resource</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="note" />
            </tree>
        </field>
    </record>

    <record id="spa_resource_view_form" model="ir.ui.view">
        <field name="name">spa.resource.form</field>
        <field name="model">spa.resource</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </div>
                    <group string="Note">
                        <field name="note" nolabel="1" />
                    </group>
                    <notebook>
                        <page string="Occupancy">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="branch_id" required="1" />
                                    <field name="occupancy" required="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="spa_resource_action" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="res_model">spa.resource</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="spa_resource_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="spa_resource_view_tree" />
        <field name="act_window_id" ref="spa_resource_action" />
    </record>

    <record id="spa_resource_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="spa_resource_view_form" />
        <field name="act_window_id" ref="spa_resource_action" />
    </record>


<!--    <menuitem id="spa_resource_menu" name="Resources" parent="spa_config_menu" action="spa_resource_action"-->
<!--        sequence="90" />-->

</odoo>
