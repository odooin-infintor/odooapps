<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit_in_spa" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.in.spa</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='function']" position="after">


                <field name="birthday"/>

            </xpath>
        </field>
    </record>


    <record id="view_partner_tree_inherit_inspa" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.inspa</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="sale_order_count" optional="show" string="Sales"/>
            </field>
        </field>
    </record>




    <menuitem id="spa_customer_menu" name="Customers" parent="in_spa_menu_root" sequence="50"
              action="account.res_partner_action_customer"/>

</odoo>
